<resources>
    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.AppCompat.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/color_gull_gray</item>
        <item name="colorPrimaryDark">@color/color_nevada</item>
        <item name="colorAccent">@color/color_ziggurat</item>
        <item name="preferenceTheme">@style/AppTheme.PreferenceThemeOverlay</item>
    </style>

    <style name="AppTheme.PreferenceThemeOverlay" parent="@style/PreferenceThemeOverlay">
        <item name="android:layout">@layout/fragment_settings</item>
    </style>

    <style name="Toolbar.Text" parent="">
        <item name="android:textColor">?android:attr/textColorPrimaryInverse</item>
        <item name="android:textSize">25sp</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="Toolbar.Button" parent="">
        <item name="android:background">?android:attr/selectableItemBackground</item>
        <item name="android:padding">@dimen/dp_16</item>
    </style>

    <style name="FullscreenDialogTheme" parent="Theme.AppCompat.Light.DialogWhenLarge">
        <item name="windowNoTitle">true</item>
        <item name="android:windowAnimationStyle">@style/Animation.AppCompat.Dialog</item>
    </style>
</resources>
