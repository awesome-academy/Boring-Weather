<?xml version="1.0" encoding="utf-8"?>
<MotionScene xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:motion="http://schemas.android.com/apk/res-auto">

    <Transition
        android:id="@+id/collapse_transition"
        motion:constraintSetEnd="@+id/end"
        motion:constraintSetStart="@+id/start">
        <KeyFrameSet>
            <KeyAttribute
                motion:framePosition="60"
                motion:motionTarget="@+id/imageToolbar">
                <CustomAttribute
                    motion:attributeName="imageAlpha"
                    motion:customIntegerValue="255" />
            </KeyAttribute>
            <KeyAttribute
                motion:framePosition="90"
                motion:motionTarget="@+id/imageToolbar">
                <CustomAttribute
                    motion:attributeName="imageAlpha"
                    motion:customIntegerValue="0" />
            </KeyAttribute>
            <KeyAttribute
                android:alpha="1.0"
                motion:framePosition="60"
                motion:motionTarget="@+id/viewBlur" />
            <KeyAttribute
                android:alpha="0.0"
                motion:framePosition="90"
                motion:motionTarget="@+id/viewBlur" />
        </KeyFrameSet>
        <OnSwipe
            motion:dragDirection="dragUp"
            motion:maxAcceleration="100"
            motion:onTouchUp="autoComplete"
            motion:touchAnchorId="@+id/recyclerViewDetail"
            motion:touchAnchorSide="top" />
    </Transition>

    <ConstraintSet
        android:id="@+id/start"
        motion:transitionEasing="accelerate">
        <Constraint
            android:id="@id/imageToolbar"
            android:layout_width="match_parent"
            android:layout_height="@dimen/dp_240"
            android:elevation="0dp">
            <CustomAttribute
                motion:attributeName="imageAlpha"
                motion:customIntegerValue="255" />
        </Constraint>
        <Constraint
            android:id="@+id/textToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="@dimen/dp_16"
            android:elevation="0dp"
            android:scaleX="@dimen/scaling_text_title_start"
            android:scaleY="@dimen/scaling_text_title_start"
            motion:layout_constraintBottom_toBottomOf="@id/viewBlur"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="@id/viewBlur" />
        <Constraint
            android:id="@+id/imageUpButton"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:elevation="0dp"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/imageBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="@dimen/scaling_image_background_start"
            android:scaleY="@dimen/scaling_image_background_start"
            android:translationY="?attr/actionBarSize"
            android:visibility="invisible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="imageAlpha"
                motion:customIntegerValue="0" />
        </Constraint>

        <Constraint
            android:id="@+id/textTitleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:elevation="0dp"
            motion:layout_constraintBottom_toBottomOf="@id/imageUpButton"
            motion:layout_constraintStart_toEndOf="@id/imageUpButton"
            motion:layout_constraintTop_toTopOf="@id/imageUpButton" />
    </ConstraintSet>

    <ConstraintSet
        android:id="@+id/end"
        motion:deriveConstraintsFrom="@id/start"
        motion:transitionEasing="accelerate">
        <Constraint
            android:id="@+id/imageToolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:elevation="@dimen/dp_2">
            <CustomAttribute
                motion:attributeName="imageAlpha"
                motion:customIntegerValue="0" />
        </Constraint>
        <Constraint
            android:id="@+id/textToolbarTitle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="@dimen/dp_12"
            android:layout_marginBottom="0dp"
            android:elevation="@dimen/dp_2"
            android:scaleX="@dimen/scaling_text_title_end"
            android:scaleY="@dimen/scaling_text_title_end"
            android:transformPivotX="0dp"
            motion:layout_constraintStart_toEndOf="@id/imageUpButton"
            motion:layout_constraintTop_toTopOf="parent" />
        <Constraint
            android:id="@+id/imageUpButton"
            android:layout_width="?attr/actionBarSize"
            android:layout_height="?attr/actionBarSize"
            android:elevation="@dimen/dp_2"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent" />

        <Constraint
            android:id="@+id/imageBackground"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:scaleX="@dimen/scaling_image_background_end"
            android:scaleY="@dimen/scaling_image_background_end"
            android:translationY="?attr/actionBarSize"
            android:visibility="visible"
            motion:layout_constraintBottom_toBottomOf="parent"
            motion:layout_constraintEnd_toEndOf="parent"
            motion:layout_constraintStart_toStartOf="parent"
            motion:layout_constraintTop_toTopOf="parent">
            <CustomAttribute
                motion:attributeName="imageAlpha"
                motion:customIntegerValue="255" />
        </Constraint>
        <Constraint
            android:id="@+id/viewBlur"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize"
            android:alpha="0.0"
            android:elevation="@dimen/dp_2"
            motion:layout_constraintBottom_toBottomOf="@id/imageToolbar" />

        <Constraint
            android:id="@id/textTitleDetail"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="@dimen/dp_240"
            android:elevation="@dimen/dp_2"
            android:visibility="invisible"
            motion:layout_constraintBottom_toTopOf="parent"
            motion:layout_constraintStart_toEndOf="@id/imageUpButton" />
    </ConstraintSet>
</MotionScene>
